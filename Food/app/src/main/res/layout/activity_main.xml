<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.valentinamperalta.food.MainActivity">

    <EditText
        android:id="@+id/valueT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/valueT"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Amount ($)"
        android:textSize="18sp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/amountText"
        android:layout_alignRight="@+id/amountText"
        android:layout_below="@+id/valueT"
        android:layout_marginTop="42dp"
        android:text="Search" />

</RelativeLayout>
